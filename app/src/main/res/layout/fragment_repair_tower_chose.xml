            <!--app:SearchViewTextColor="@color/text_view_search_color"-->
            <!--app:RevealViewBackgroundColor="@color/light_orange"-->
            <!--app:SearchViewBackgroundColor="@color/light_orange"-->
            <!--android:textSize="@dimen/_15ssp"-->
