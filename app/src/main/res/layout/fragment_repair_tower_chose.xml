            <!--app:BordersSize="1dp"-->
            <!--app:BoarderColor="@color/colorAccentSpinner"-->
            <!--app:SpinnerExpandHeight="0dp"-->
            <!--/>-->

        <EditText
            android:id="@+id/txt_mission_name"
            android:hint="@string/search_by_tower_name"
            android:text="@={repairTowerChoseVM.nameSearchBoxInput}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            app:textviewfont="@{`faNumRegular`}"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/black"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/hint_dialog_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/topOfEtMissionChose"/>


        <com.controladad.boutia_pms.adapters.StatefulRecyclerView
            android:id="@+id/statefulRecyclerView"
            style="@style/scrollbar_shape_style"
            adapter_vertical="@{repairTowerChoseVM.adapter}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:fadeScrollbars="false"
            android:paddingEnd="32dp"

            app:layout_constraintBottom_toTopOf="@+id/topOfEtReviewDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_mission_name" />

        
        <TextView
            android:id="@+id/txtTowerNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            android:text="@string/selected_tower_number"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toTopOf="@+id/bottomOfEtReviewDate"
            app:layout_constraintStart_toStartOf="@+id/rightOfETs"
            app:layout_constraintTop_toTopOf="@+id/topOfEtReviewDate"
            app:textviewfont="@{`faNumRegular`}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            android:text="@{repairTowerChoseVM.selectedBarcode}"
            android:textColor="@color/red_700"
            android:textSize="@dimen/_17ssp"
            app:layout_constraintBottom_toTopOf="@+id/bottomOfEtReviewDate"
            app:layout_constraintStart_toEndOf="@id/txtTowerNumber"
            app:layout_constraintTop_toTopOf="@+id/topOfEtReviewDate"
            app:textviewfont="@{`faNumBold`}" />


        <Button
            android:onClick="@{repairTowerChoseVM.onOkButtonClicked()}"
            android:id="@+id/btnSubmitRepairMissionChose"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_gradient_orange_yellow"
            android:textColor="@color/white"
            android:text="@string/ok_and_continue"
            android:drawablePadding="8dp"
            android:padding="8dp"
            textviewfont="@{`faNumRegular`}"
            android:textSize="@dimen/_19ssp"
            app:layout_constraintBottom_toTopOf="@+id/bottomOfSubmitButton"
            app:layout_constraintEnd_toEndOf="@+id/leftOfSubmitButton"
            app:layout_constraintStart_toEndOf="@+id/rightOfSubmitButton"
            app:layout_constraintTop_toTopOf="@+id/topOfSubmitButton"
            />
        <!--                android:drawableStart="@drawable/ic_forward"
-->

        <ImageView
            android:id="@+id/img_clear_filter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="@{repairTowerChoseVM.filterTowerVisibility}"
            android:onClick="@{repairTowerChoseVM.onClearFilterClick()}"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomOfTxtMissionChose"
            app:layout_constraintEnd_toStartOf="@+id/leftOfETs"
            app:layout_constraintStart_toStartOf="@+id/leftOfSubmitButton"
            app:layout_constraintTop_toTopOf="@+id/topOfClearFilter"
            segmentedgroup:srcCompat="@drawable/ic_clear_filter" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>