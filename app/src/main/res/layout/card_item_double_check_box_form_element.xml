<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="doubleCheckBoxDataModel"
            type="com.controladad.boutia_pms.view_models.items_view_models.DoubleCheckBoxDataModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:weightSum="1"
        >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        >
        <cn.refactor.library.SmoothCheckBox
            android:id="@+id/rightCheckBox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:onClick="@{doubleCheckBoxDataModel.onRightButtonClicked()}"
            android:checked="@{doubleCheckBoxDataModel.isUserSelectedRight}"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:color_checked="@color/colorAccent"
            />

        <TextView
            android:onClick="@{doubleCheckBoxDataModel.onRightButtonClicked()}"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            app:textviewfont="@{`faNumRegular`}"
            android:text="@{doubleCheckBoxDataModel.rightText}"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/left_linear_layout"
        android:visibility="@{doubleCheckBoxDataModel.leftCheckBoxVisibility}"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        >
        <cn.refactor.library.SmoothCheckBox
            android:id="@+id/leftCheckBoc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:onClick="@{doubleCheckBoxDataModel.onLeftButtonClicked()}"
            android:checked="@{doubleCheckBoxDataModel.isUserSelectedLeft}"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:color_checked="@color/colorAccent"
            />

        <TextView
            android:onClick="@{doubleCheckBoxDataModel.onLeftButtonClicked()}"            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            app:textviewfont="@{`faNumRegular`}"
            android:text="@{doubleCheckBoxDataModel.leftText}"
            />
    </LinearLayout>

    </LinearLayout>
</layout>